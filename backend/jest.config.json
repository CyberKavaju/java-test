{
  "testEnvironment": "node",
  "testTimeout": 30000,
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/data/**",
    "!**/node_modules/**"
  ],
  "coverageReporters": ["text", "lcov", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    },
    "src/database/Database.js": {
      "branches": 95,
      "functions": 95,
      "lines": 95,
      "statements": 95
    },
    "src/server.js": {
      "branches": 85,
      "functions": 85,
      "lines": 85,
      "statements": 85
    }
  },
  "testPathIgnorePatterns": ["/node_modules/"],
  "verbose": true,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/tests/**/*.test.js",
    "**/?(*.)+(spec|test).js"
  ],
  "watchPlugins": [
    "jest-watch-typeahead/filename",
    "jest-watch-typeahead/testname"
  ],
  "notify": true,
  "notifyMode": "failure-change",
  "collectCoverage": false,
  "bail": false,
  "errorOnDeprecated": true,
  "maxWorkers": "50%"
}
